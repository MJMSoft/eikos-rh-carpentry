---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import HeroTwoColumn from '../components/HeroTwoColumn.astro';
import Services from '../components/Services.astro';
import Stats from '../components/Stats.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

const navLinks = [
  { href: '#services', label: 'Servicios' },
  { href: '#portfolio', label: 'Portafolio' },
  { href: '#process', label: 'Proceso' },
  { href: '#contact', label: 'Contacto' }
];

const services = [
  {
    icon: '🏠',
    title: 'Gabinetes a la Medida',
    description: 'Gabinetes de cocina y baño hechos a mano, adaptados a su espacio, estilo y necesidades de almacenamiento con materiales premium.'
  },
  {
    icon: '🪑',
    title: 'Fabricación de Muebles',
    description: 'Muebles personalizados diseñados y construidos para durar generaciones, desde comedores hasta juegos de alcoba.'
  },
  {
    icon: '🚪',
    title: 'Instalación de Puertas y Ventanas',
    description: 'Instalación experta y personalización de puertas interiores y exteriores, molduras y marcos de ventanas.'
  },
  {
    icon: '🏗️',
    title: 'Construcción de Terrazas',
    description: 'Diseño y construcción de hermosos espacios al aire libre con madera compuesta o natural y pérgolas.'
  },
  {
    icon: '🛠️',
    title: 'Remodelaciones',
    description: 'Remodelaciones interiores completas incluyendo pisos, molduras de corona, revestimientos y modificaciones estructurales.'
  },
  {
    icon: '📐',
    title: 'Carpintería Arquitectónica',
    description: 'Carpintería arquitectónica de precisión incluyendo repisas de chimenea, muebles empotrados, estanterías y elementos decorativos.'
  }
];

const stats = [
  { number: '20', suffix: '+', label: 'Años de Experiencia' },
  { number: '500', suffix: '+', label: 'Proyectos Completados' },
  { number: '98', suffix: '%', label: 'Satisfacción del Cliente' },
  { number: '10', suffix: ' años', label: 'de Garantía' }
];

const socialLinks = [
  { platform: 'Instagram', url: '#', icon: '📷' },
  { platform: 'Pinterest', url: '#', icon: '📌' },
  { platform: 'Facebook', url: '#', icon: '📘' }
];
---

<BaseLayout>
  <Navigation 
    links={navLinks}
    bgColor="bg-white"
    textColor="text-gray-900"
  />
  
  <HeroTwoColumn 
    title="EIKOS RH: Carpintería Elegante"
    subtitle="Diseños exclusivos y acabados de primera clase para espacios que reflejan distinción y buen gusto"
    ctaText="Solicitar Cotización"
    image="https://images.unsplash.com/photo-1504148455328-c376907d081c?q=80&w=2000"
    imageAlt="Carpintería elegante y de alta calidad"
    accentColor="from-carpentry-primary to-carpentry-secondary"
  />
  
  <Services 
    title="Servicios de Excelencia"
    subtitle="Creamos piezas únicas que combinan funcionalidad y elegancia para su hogar u oficina"
    services={services}
    bgColor="bg-gray-50"
    cardStyle="elevated"
    accentColor="from-carpentry-primary to-carpentry-accent"
  />
  
  <section class="py-20 bg-white" id="portfolio">
    <div class="container mx-auto px-4 lg:px-8">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-center text-gray-900 mb-4 animate-on-scroll">
        Proyectos Destacados
      </h2>
      <p class="text-xl text-gray-600 text-center mb-12 animate-on-scroll">
        Elegancia y distinción en cada creación
      </p>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="group relative overflow-hidden rounded-2xl shadow-lg animate-on-scroll">
          <img 
            src="https://images.unsplash.com/photo-1565791380713-1756b9a05343?q=80&w=800" 
            alt="Proyecto de Gabinetes de Cocina"
            class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
            <div class="p-6 text-white">
              <h3 class="text-xl font-bold mb-1">Cocinas de Lujo</h3>
              <p class="text-sm">Gabinetes elegantes con acabados premium y herrajes de alta gama</p>
            </div>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl shadow-lg animate-on-scroll" style="animation-delay: 0.1s;">
          <img 
            src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?q=80&w=800" 
            alt="Muebles Personalizados"
            class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
            <div class="p-6 text-white">
              <h3 class="text-xl font-bold mb-1">Mobiliario Exclusivo</h3>
              <p class="text-sm">Diseños únicos en maderas nobles con acabados artesanales</p>
            </div>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl shadow-lg animate-on-scroll" style="animation-delay: 0.2s;">
          <img 
            src="https://images.unsplash.com/photo-1600585152220-90363fe7e115?q=80&w=800" 
            alt="Proyecto de Terraza"
            class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
            <div class="p-6 text-white">
              <h3 class="text-xl font-bold mb-1">Espacios Exteriores Elegantes</h3>
              <p class="text-sm">Terrazas y pérgolas de diseño sofisticado para ambientes distinguidos</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <section class="py-20 bg-gradient-to-br from-carpentry-primary to-carpentry-secondary text-white" id="process">
    <div class="container mx-auto px-4 lg:px-8">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-16 animate-on-scroll">
        Nuestro Proceso de Artesanía
      </h2>
      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center animate-on-scroll">
          <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4 backdrop-blur-sm">
            <span class="text-3xl">📐</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Consulta de Diseño</h3>
          <p class="text-white/80">Discutimos su visión, tomamos medidas y creamos planos detallados</p>
        </div>
        <div class="text-center animate-on-scroll" style="animation-delay: 0.1s;">
          <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4 backdrop-blur-sm">
            <span class="text-3xl">🪵</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Selección de Materiales</h3>
          <p class="text-white/80">Elija entre maderas duras premium y materiales de calidad para su proyecto</p>
        </div>
        <div class="text-center animate-on-scroll" style="animation-delay: 0.2s;">
          <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4 backdrop-blur-sm">
            <span class="text-3xl">🔨</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Elaboración Experta</h3>
          <p class="text-white/80">Nuestros artesanos calificados dan vida a su proyecto con precisión</p>
        </div>
        <div class="text-center animate-on-scroll" style="animation-delay: 0.3s;">
          <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4 backdrop-blur-sm">
            <span class="text-3xl">✨</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Toques Finales</h3>
          <p class="text-white/80">Acabado e instalación profesional con atención a cada detalle</p>
        </div>
      </div>
    </div>
  </section>
  
  <Stats 
    title="Construido con Confianza y Calidad"
    stats={stats}
    bgColor="bg-carpentry-primary"
    accentColor="from-carpentry-secondary to-carpentry-accent"
  />
  
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="animate-on-scroll">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            ¿Por Qué Elegir EIKOS RH?
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="group bg-gray-50 p-6 rounded-xl hover:bg-carpentry-primary hover:shadow-xl transition-all duration-300">
              <div class="flex items-center mb-3">
                <div class="w-12 h-12 bg-carpentry-secondary bg-opacity-20 rounded-lg flex items-center justify-center mr-4 group-hover:bg-white group-hover:bg-opacity-20">
                  <span class="text-2xl">🌿</span>
                </div>
                <h3 class="font-semibold text-gray-900 text-lg group-hover:text-white">Materiales Sostenibles</h3>
              </div>
              <p class="text-gray-600 group-hover:text-gray-100 leading-relaxed">Obtenemos madera ecológica de bosques certificados sostenibles.</p>
            </div>
            <div class="group bg-gray-50 p-6 rounded-xl hover:bg-carpentry-primary hover:shadow-xl transition-all duration-300">
              <div class="flex items-center mb-3">
                <div class="w-12 h-12 bg-carpentry-secondary bg-opacity-20 rounded-lg flex items-center justify-center mr-4 group-hover:bg-white group-hover:bg-opacity-20">
                  <span class="text-2xl">🔨</span>
                </div>
                <h3 class="font-semibold text-gray-900 text-lg group-hover:text-white">Técnicas Tradicionales</h3>
              </div>
              <p class="text-gray-600 group-hover:text-gray-100 leading-relaxed">Métodos de ensamblaje tradicionales que garantizan muebles que duran generaciones.</p>
            </div>
            <div class="group bg-gray-50 p-6 rounded-xl hover:bg-carpentry-primary hover:shadow-xl transition-all duration-300">
              <div class="flex items-center mb-3">
                <div class="w-12 h-12 bg-carpentry-secondary bg-opacity-20 rounded-lg flex items-center justify-center mr-4 group-hover:bg-white group-hover:bg-opacity-20">
                  <span class="text-2xl">✏️</span>
                </div>
                <h3 class="font-semibold text-gray-900 text-lg group-hover:text-white">Diseño Personalizado</h3>
              </div>
              <p class="text-gray-600 group-hover:text-gray-100 leading-relaxed">Consultas gratuitas de diseño 3D para visualizar su proyecto antes de construir.</p>
            </div>
            <div class="group bg-gray-50 p-6 rounded-xl hover:bg-carpentry-primary hover:shadow-xl transition-all duration-300">
              <div class="flex items-center mb-3">
                <div class="w-12 h-12 bg-carpentry-secondary bg-opacity-20 rounded-lg flex items-center justify-center mr-4 group-hover:bg-white group-hover:bg-opacity-20">
                  <span class="text-2xl">🛡️</span>
                </div>
                <h3 class="font-semibold text-gray-900 text-lg group-hover:text-white">Garantía de 10 Años</h3>
              </div>
              <p class="text-gray-600 group-hover:text-gray-100 leading-relaxed">Nuestra artesanía está respaldada por una garantía integral.</p>
            </div>
          </div>
        </div>
        <div class="relative animate-on-scroll" style="animation-delay: 0.2s;">
          <img 
            src="https://images.unsplash.com/photo-1600607687920-4e2a09cf159d?q=80&w=1000" 
            alt="Carpintero trabajando"
            class="rounded-2xl shadow-2xl"
          />
          <div class="absolute -bottom-6 -right-6 bg-carpentry-secondary text-white p-6 rounded-2xl shadow-xl">
            <p class="text-3xl font-bold">20+</p>
            <p class="text-sm">Años de Excelencia</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <Contact 
    title="Transforme Sus Espacios con Elegancia"
    subtitle="Solicite una consulta personalizada para su proyecto de carpintería de lujo"
    phone="313 6214725"
    email="info@eikosrh.com"
    address="Cl. 106 #26 P 25, Manuela Beltran, Cali, Valle del Cauca"
    bgColor="bg-gray-50"
    accentColor="from-carpentry-primary to-carpentry-secondary"
  />
  
  <Footer 
    companyName="EIKOS RH - Carpintería Elegante"
    links={navLinks}
    socials={socialLinks}
    bgColor="bg-gray-900"
  />
  
  <WhatsAppButton />
</BaseLayout>