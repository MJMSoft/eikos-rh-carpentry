---
import { siteConfig } from '../config/site.config';

export interface Props {
  links: Array<{ href: string; label: string }>;
  bgColor?: string;
  textColor?: string;
  logo?: string;
  companyName?: string;
}

const { 
  links, 
  bgColor = 'bg-white', 
  textColor = 'text-gray-900', 
  logo = siteConfig.company.logo, 
  companyName = siteConfig.company.name 
} = Astro.props;
---

<nav class={`fixed top-0 left-0 right-0 z-50 ${bgColor} shadow-lg transition-all duration-300`} id="navbar">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <div class="flex items-center space-x-3">
        {logo ? (
          <img src={logo} alt={companyName} class="h-8 lg:h-10" />
        ) : (
          <span class={`font-bold text-2xl lg:text-3xl ${textColor} tracking-wider`} style="font-family: 'Playfair Display', serif;">{companyName}</span>
        )}
      </div>
      
      <div class="hidden md:flex items-center space-x-8">
        {links.map(link => (
          <a href={link.href} class={`${textColor} hover:opacity-70 transition-opacity font-medium`}>
            {link.label}
          </a>
        ))}
        <button class="cta-button text-white px-6 py-2 rounded-full hover:shadow-lg transform hover:scale-105 transition-all duration-300">
          Cotiza aqu√≠
        </button>
      </div>
      
      <button class="md:hidden" id="mobile-menu-btn">
        <svg class={`w-6 h-6 ${textColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <div class="hidden md:hidden" id="mobile-menu">
    <div class={`px-4 pt-2 pb-3 space-y-1 ${bgColor}`}>
      {links.map(link => (
        <a href={link.href} class={`block px-3 py-2 ${textColor} hover:opacity-70 transition-opacity font-medium`}>
          {link.label}
        </a>
      ))}
      <button class="w-full cta-button text-white px-6 py-2 rounded-full hover:shadow-lg">
        Cotiza ya
      </button>
    </div>
  </div>
</nav>

<style>
  .cta-button {
    background-color: #d1a74b !important;
    color: #192d5a !important;
    font-weight: 600;
    border: none;
  }
  .cta-button:hover {
    background-color: #192d5a !important;
    color: white !important;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const navbar = document.getElementById('navbar');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 100) {
      navbar?.classList.add('backdrop-blur-md', 'bg-opacity-90');
    } else {
      navbar?.classList.remove('backdrop-blur-md', 'bg-opacity-90');
    }
    
    lastScroll = currentScroll;
  });
</script>